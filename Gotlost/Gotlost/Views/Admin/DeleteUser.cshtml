@model Gotlost.Models.Entities.User
@{
    ViewBag.Title = "Delete User";
    Layout = "_Layout";
}

<div class="container mt-5">
    <div class="alert alert-warning">
        <h4>Confirm User Deletion</h4>
        <p>Are you sure you want to remove this user from the system?</p>
    </div>

    <dl class="row mb-4">
        <dt class="col-sm-2">Name:</dt>
        <dd class="col-sm-10">@Model.FullName</dd>

        <dt class="col-sm-2">Email:</dt>
        <dd class="col-sm-10">@Model.Email</dd>
    </dl>

    <form asp-controller="Admin" asp-action="DeleteUser" method="post">
        <input type="hidden" asp-for="UserId" />
        <button type="submit" class="btn btn-danger">Delete User</button>
        <a asp-controller="Admin" asp-action="AllUsers" class="btn btn-secondary">Cancel</a>
    </form>
</div>