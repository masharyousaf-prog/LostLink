@model IEnumerable<Gotlost.Models.Entities.ContactUs>
@{
    ViewBag.Title = "Contact Us Messages";
    Layout = "_Layout";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Contact Messages</h2>
        <a asp-controller="Admin" asp-action="Back" class="btn btn-outline-secondary">Back</a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Message</th>
                    <th>Sent At</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var msg in Model)
                {
                    <tr>
                        <td>@msg.Name</td>
                        <td>@msg.Email</td>
                        <td title="@msg.Message">
                            @if (msg.Message.Length > 50)
                            {
                                @(msg.Message.Substring(0, 50) + "...")
                            }
                            else
                            {
                                @msg.Message
                            }
                        </td>
                        <td>@msg.SentAt.ToString("g")</td>
                        <td>
                            <a href="mailto:@msg.Email?subject=Reply&body=Dear @msg.Name," class="btn btn-sm btn-primary">
                                Reply
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>