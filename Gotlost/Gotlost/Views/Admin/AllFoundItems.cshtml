@model IEnumerable<Gotlost.Models.Entities.FoundItem>
@{
    ViewBag.Title = "Found Items";
    Layout = "_Layout";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Found Items</h2>
        <a asp-controller="Admin" asp-action="Back" class="btn btn-outline-secondary">Back</a>
    </div>

    <table class="table table-bordered table-hover">
        <thead class="thead-light">
            <tr>
                <th>Item Name</th>
                <th>Description</th>
                <th>Date Found</th>
                <th>Location</th>
                <th>User</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ItemName</td>
                    <td>@item.Description</td>
                    <td>@item.FoundDate.ToShortDateString()</td>
                    <td>@item.Location</td>
                    <td>@item.User?.FullName</td>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-action="Details" asp-route-id="@item.FoundItemId" class="btn btn-sm btn-info">Details</a>
                            <a asp-controller="Admin" asp-action="Delete" asp-route-id="@item.FoundItemId" class="btn btn-sm btn-danger" onclick="return confirm('Delete this item?');">Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>