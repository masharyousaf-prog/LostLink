@model Gotlost.Models.Entities.FoundItem
@{
    ViewBag.Title = "Delete Item";
}

<div class="container mt-5">
    <div class="alert alert-danger">
        <h4>Are you sure you want to delete this item?</h4>
        <p>This action cannot be undone.</p>
    </div>

    <div class="card mb-4">
        <div class="card-body">
            <h5 class="card-title">@Model.ItemName</h5>
            <p class="card-text">
                <strong>Description:</strong> @Model.Description<br />
                <strong>Location:</strong> @Model.Location
            </p>
        </div>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="FoundItemId" />
        <button type="submit" class="btn btn-danger">Confirm Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>