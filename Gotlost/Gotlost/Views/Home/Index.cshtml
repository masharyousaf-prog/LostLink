@model List<Gotlost.Models.Entities.FoundItem>
@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="bg-light py-5 mb-5 border-bottom">
    <div class="container text-center">
        <h1 class="display-3 font-weight-bold text-dark">LostLink</h1>
        <p class="lead text-muted mb-4">The easiest way to report lost items and reunite with found belongings on campus.</p>
        <div>
            <a class="btn btn-primary btn-lg px-4 mr-2" asp-controller="Signup" asp-action="Index">Get Started</a>
            <a class="btn btn-outline-dark btn-lg px-4" asp-controller="Home" asp-action="Aboutus">Learn More</a>
        </div>
    </div>
</div>

<div class="container mb-5">
    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card h-100 shadow-sm text-center p-4 border-0">
                <div class="card-body">
                    <div class="text-danger mb-3">
                        <i class="fas fa-search-location fa-4x"></i>
                    </div>
                    <h3 class="card-title">Lost Something?</h3>
                    <p class="card-text text-muted">Report property lost on campus immediately. We help notify the community.</p>

                    @if (User.Identity.IsAuthenticated)
                    {
                        <a asp-controller="Login" asp-action="Profile" class="btn btn-danger mt-3">Report Lost Item</a>
                    }
                    else
                    {
                        <a asp-controller="Login" asp-action="Index" class="btn btn-danger mt-3">Report Lost Item</a>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-4">
            <div class="card h-100 shadow-sm text-center p-4 border-0">
                <div class="card-body">
                    <div class="text-success mb-3">
                        <i class="fas fa-hand-holding-heart fa-4x"></i>
                    </div>
                    <h3 class="card-title">Found Something?</h3>
                    <p class="card-text text-muted">Found an item? Report it here to help return it to its rightful owner.</p>

                    @if (User.Identity.IsAuthenticated)
                    {
                        <a asp-controller="Login" asp-action="Profile" class="btn btn-success mt-3">Report Found Item</a>
                    }
                    else
                    {
                        <a asp-controller="Login" asp-action="Index" class="btn btn-success mt-3">Report Found Item</a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container py-5 border-top">
    <div class="text-center mb-5">
        <h2>Recently Found Items</h2>
        <p class="text-muted">Check if your lost item is listed below.</p>
    </div>

    <div class="row">
        @foreach (var item in Model.Take(6))
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm h-100">
                    <div style="height: 200px; overflow: hidden; background-color: #eee; display: flex; align-items: center; justify-content: center;">
                        <img src="@Url.Content(item.ImagePath ?? "~/images/default-item.png")"
                             class="img-fluid"
                             alt="@item.ItemName"
                             style="max-height: 100%; max-width: 100%; object-fit: cover;"
                             onerror="this.src='https://via.placeholder.com/150'" />
                    </div>
                    <div class="card-body">
                        <h5 class="card-title text-truncate">@item.ItemName</h5>
                        <p class="card-text text-muted small">
                            <i class="fas fa-map-marker-alt"></i> Found at: @item.Location
                        </p>
                    </div>
                    <div class="card-footer bg-white">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <a asp-controller="Login" asp-action="Claim" asp-route-foundItemId="@item.FoundItemId" class="btn btn-sm btn-outline-primary w-100">View Details</a>
                        }
                        else
                        {
                            <a asp-controller="Login" asp-action="Index" class="btn btn-sm btn-outline-primary w-100">View Details</a>
                        }
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="text-center mt-4">
        @if (User.Identity.IsAuthenticated)
        {
            <a asp-controller="Login" asp-action="Gallery" class="btn btn-primary px-5">View All Found Items</a>
        }
        else
        {
            <a asp-controller="Login" asp-action="Index" class="btn btn-primary px-5">View All Found Items</a>
        }
    </div>
</div>