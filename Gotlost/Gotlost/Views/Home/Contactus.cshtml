@{
    ViewBag.Title = "Contact Us";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="text-center mb-4">
                <h1 class="display-5 font-weight-bold">Contact Us</h1>
                <p class="lead text-muted">Have a question? We'd love to hear from you.</p>
            </div>

            <div class="card shadow-sm border-0">
                <div class="card-body p-4">
                    <form method="post" asp-action="msg" asp-controller="Home">
                        <div class="form-group mb-3">
                            <label class="form-label font-weight-bold">Name</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light"><i class="fas fa-user"></i></span>
                                <input type="text" name="Name" class="form-control" placeholder="Your Name" required />
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <label class="form-label font-weight-bold">Email</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light"><i class="fas fa-envelope"></i></span>
                                <input type="email" name="Email" class="form-control" placeholder="name@example.com" />
                            </div>
                        </div>

                        <div class="form-group mb-4">
                            <label class="form-label font-weight-bold">Message</label>
                            <textarea name="Message" class="form-control" placeholder="How can we help?" rows="5"></textarea>
                        </div>

                        <button type="submit" class="btn btn-primary btn-block w-100">
                            <i class="fas fa-paper-plane mr-2"></i> Submit Message
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>