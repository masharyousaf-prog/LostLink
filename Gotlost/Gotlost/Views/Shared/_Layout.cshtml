<!DOCTYPE html>
<html lang="en" class="h-100">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>@ViewBag.Title - LostLink</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Segoe+UI:wght@400;600;700&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
            background-color: #f8f9fa;
        }
        /* Flexbox Sticky Footer wrapper */
        .d-flex-wrapper {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        main {
            flex: 1;
        }
    </style>
</head>
<body class="d-flex-wrapper">

    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
            <div class="container">
                <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-link me-2"></i>LostLink
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Aboutus">About Us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="ContactUs">Contact Us</a>
                        </li>
                    </ul>

                    <div class="d-flex align-items-center">
                        @if (User.Identity.IsAuthenticated)
                        {
                            // [FIX] Get Image from Claims (set in LoginController)
                            var profilePic = User.FindFirst("ProfilePicture")?.Value;

                            <div class="dropdown">
                                <a href="#" class="d-flex align-items-center text-white text-decoration-none dropdown-toggle" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">

                                    <img src="@Url.Content(profilePic ?? "~/images/default-user.png")"
                                         alt="User"
                                         width="32" height="32"
                                         class="rounded-circle me-2"
                                         style="object-fit:cover;"
                                         onerror="this.src='https://via.placeholder.com/32?text=User'">

                                    <strong>@(User.Identity.Name ?? "Profile")</strong>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end text-small shadow" aria-labelledby="userDropdown">
                                    <li>
                                        <a class="dropdown-item" asp-controller="Login" asp-action="Profile">My Profile</a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <a class="dropdown-item text-danger" asp-controller="Login" asp-action="Logout">Sign out</a>
                                    </li>
                                </ul>
                            </div>
                        }
                        else
                        {
                            <a class="btn btn-outline-light me-2 btn-sm" asp-controller="Signup" asp-action="Index">Sign Up</a>
                            <a class="btn btn-primary btn-sm" asp-controller="Login" asp-action="Index">Login</a>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <main class="py-4">
        @RenderBody()
    </main>

    <footer class="bg-dark text-white py-4 mt-auto">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-4 text-center text-md-start mb-3 mb-md-0">
                    <h5 class="fw-bold">LostLink</h5>
                    <p class="small text-white-50 mb-0">&copy; @DateTime.Now.Year All rights reserved.</p>
                </div>

                <div class="col-md-4 text-center mb-3 mb-md-0">
                    <a href="#" class="text-white-50 mx-2"><i class="fab fa-facebook-f"></i></a>
                    <a href="#" class="text-white-50 mx-2"><i class="fab fa-twitter"></i></a>
                    <a href="#" class="text-white-50 mx-2"><i class="fab fa-instagram"></i></a>
                </div>

                <div class="col-md-4 text-center text-md-end">
                    <a href="#" class="text-white-50 text-decoration-none small me-2">Privacy</a>
                    <a href="#" class="text-white-50 text-decoration-none small">Terms</a>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>