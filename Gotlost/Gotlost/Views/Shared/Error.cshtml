@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="container mt-5 text-center">
    <div class="alert alert-danger shadow-sm d-inline-block text-start p-4" role="alert" style="max-width: 600px;">
        <h1 class="display-6 fw-bold border-bottom pb-2 mb-3">
            <i class="fas fa-exclamation-triangle me-2"></i>Error
        </h1>
        <p class="lead">An error occurred while processing your request.</p>

        @if (Model.ShowRequestId)
        {
            <div class="bg-light p-2 rounded border mb-3">
                <strong>Request ID:</strong> <code class="text-danger">@Model.RequestId</code>
            </div>
        }

        <div class="small text-muted mt-4">
            <h5>Development Mode</h5>
            <p>
                Swapping to <strong>Development</strong> environment will display more detailed information about the error that occurred.
            </p>
            <p>
                <strong>The Development environment shouldn't be enabled for deployed applications.</strong>
                For local debugging, enable the <strong>Development</strong> environment by setting the <strong>ASPNETCORE_ENVIRONMENT</strong> environment variable to <strong>Development</strong> and restarting the app.
            </p>
        </div>

        <div class="mt-4 text-center">
            <a href="/" class="btn btn-outline-danger">Return Home</a>
        </div>
    </div>
</div>