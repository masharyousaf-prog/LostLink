@model Gotlost.Models.Entities.User

@{
    ViewData["Title"] = "User Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.IsProfilePage = true;
}

<div class="container py-5">

    <div class="card shadow-sm mb-5">
        <div class="card-body">
            <div class="row align-items-center">
                <div class="col-md-2 text-center">
                    <img src="@Url.Content(Model.ProfilePicturePath ?? "~/images/default-user.png")"
                         alt="Profile"
                         class="rounded-circle img-thumbnail"
                         style="width: 120px; height: 120px; object-fit: cover;"
                         onerror="this.src='https://via.placeholder.com/150'" />
                </div>
                <div class="col-md-10 text-center text-md-left mt-3 mt-md-0">
                    <h2 class="mb-1">@Model.FullName</h2>
                    <p class="text-muted mb-1"><i class="fas fa-envelope mr-2"></i> @Model.Email</p>
                    <p class="text-muted"><i class="fas fa-phone mr-2"></i> @Model.PhoneNumber</p>
                </div>
            </div>
        </div>
    </div>

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3><i class="fas fa-search text-primary"></i> Items You Found</h3>
        <a asp-controller="Login" asp-action="Found" class="btn btn-sm btn-primary"><i class="fas fa-plus"></i> Report New</a>
    </div>

    @if (Model.FoundItems?.Any() == true)
    {
        <div class="row mb-5">
            @foreach (var item in Model.FoundItems)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100 border-0 shadow-sm">
                        <img src="@Url.Content(item.ImagePath ?? "~/images/default-item.png")" class="card-img-top" style="height: 180px; object-fit: cover;" onerror="this.src='https://via.placeholder.com/150'" />
                        <div class="card-body">
                            <h5 class="card-title">@item.ItemName</h5>
                            <p class="card-text small text-muted"><i class="fas fa-calendar-alt"></i> @item.FoundDate.ToString("dd MMM yyyy")</p>
                            <p class="card-text small text-muted"><i class="fas fa-map-marker-alt"></i> @item.Location</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-light border text-center mb-5">You haven't reported any found items yet.</div>
    }

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3><i class="fas fa-file-signature text-warning"></i> My Claims</h3>
        <a asp-controller="Login" asp-action="Gallery" class="btn btn-sm btn-outline-dark">
            <i class="fas fa-images mr-1"></i> Browse Gallery
        </a>
    </div>

    @if (Model.Claims?.Any() == true)
    {
        <div class="list-group mb-5">
            @foreach (var claim in Model.Claims)
            {
                <div class="list-group-item list-group-item-action flex-column align-items-start">
                    <div class="d-flex w-100 justify-content-between">
                        <h5 class="mb-1">Claim for: @claim.FoundItem?.ItemName</h5>
                        <small>
                            @if (claim.Status == "Approved")
                            {
                                <span class="badge badge-success">Approved</span>
                            }
                            else if (claim.Status == "Rejected")
                            {
                                <span class="badge badge-danger">Rejected</span>
                            }
                            else
                            {
                                <span class="badge badge-warning">Pending</span>
                            }
                        </small>
                    </div>
                    <p class="mb-1 text-muted">Claim ID: #@claim.ClaimId | Date: @claim.ClaimDate.ToString("dd MMM yyyy")</p>
                    <div class="mt-2">
                        <form asp-controller="Login" asp-action="DeleteClaim" asp-route-id="@claim.ClaimId" method="post" onsubmit="return confirm('Are you sure you want to delete this claim?');" class="d-inline">
                            <button type="submit" class="btn btn-outline-danger btn-sm">
                                <i class="fas fa-trash-alt"></i> Delete Claim
                            </button>
                        </form>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-light border text-center">You haven't claimed any items yet.</div>
    }
</div>