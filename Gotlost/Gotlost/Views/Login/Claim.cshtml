@model Gotlost.Models.AddClaim
@{
    ViewData["Title"] = "Claim Item";
    var foundItem = ViewBag.FoundItem as Gotlost.Models.Entities.FoundItem;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-white">
                    <h2 class="h4 mb-0"><i class="fas fa-hand-paper text-primary mr-2"></i> Claim Found Item</h2>
                </div>

                <div class="card-body">
                    @if (foundItem != null)
                    {
                        <div class="alert alert-secondary d-flex align-items-center mb-4" role="alert">
                            <img src="@Url.Content(foundItem.ImagePath ?? "~/images/default-item.png")"
                                 class="rounded mr-3"
                                 style="width: 80px; height: 80px; object-fit: cover;" />
                            <div>
                                <h5 class="alert-heading mb-1">@foundItem.ItemName</h5>
                                <p class="mb-0 small">
                                    Found on <strong>@foundItem.FoundDate.ToShortDateString()</strong> at <strong>@foundItem.Location</strong>
                                </p>
                            </div>
                        </div>
                    }

                    <form asp-controller="Login" asp-action="Claim" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="FoundItemId" />

                        <div class="form-group mb-4">
                            <label asp-for="Description" class="font-weight-bold">Why is this yours?</label>
                            <small class="form-text text-muted mb-2">Provide unique details that only the owner would know (e.g., scratches, contents, wallpaper).</small>
                            <textarea asp-for="Description" class="form-control" rows="5" placeholder="Describe the item in detail..."></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                            @if (ViewData["Error"] != null)
                            {
                                <div class="text-danger mt-2">@ViewData["Error"]</div>
                            }
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="javascript:history.back()" class="btn btn-outline-secondary">Cancel</a>
                            <button type="submit" class="btn btn-success px-4">
                                <i class="fas fa-paper-plane mr-2"></i> Submit Claim
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}